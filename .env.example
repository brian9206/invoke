# MinIO Configuration
MINIO_ROOT_USER=invoke-minio
MINIO_ROOT_PASSWORD=invoke-minio-password-123
MINIO_ACCESS_KEY=invoke-minio
MINIO_SECRET_KEY=invoke-minio-password-123
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_BUCKET=invoke-packages

# Application Secrets
JWT_SECRET=your_jwt_secret_change_in_production
INTERNAL_GATEWAY_SECRET=your_internal_gateway_secret_change_in_production

# Database Connection
DB_HOST=postgres
DB_PORT=5432
DB_NAME=invoke_db
DB_USER=postgres
DB_PASSWORD=invoke_password_123

# Service URLs
EXECUTION_SERVICE_URL=http://execution:3001

# Service Ports
ADMIN_PORT=3000
EXECUTION_PORT=3001
GATEWAY_PORT=3002

# Execution Service Configuration
CACHE_DIR=/app/cache
RATE_LIMIT=100
EXECUTION_TIMEOUT=30000
CACHE_TTL_DAYS=7
MAX_CACHE_SIZE_GB=10
TRUST_PROXY=1

# Scheduler Configuration
SCHEDULER_INTERVAL=60000
TZ=Asia/Hong_Kong

# Cloudflare Turnstile (CAPTCHA)
# Get your keys from https://dash.cloudflare.com/
# For testing, use: 1x00000000000000000000AA (always passes)
TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA
