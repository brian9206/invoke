{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Invoke Admin (Next.js)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/invoke-admin",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "serverReadyAction": {
        "pattern": "ready - started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Debug Invoke Execution Service",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/invoke-execution/server.js",
      "cwd": "${workspaceFolder}/invoke-execution",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3001"
      },
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "restart": true
    },
    {
      "name": "Attach to Invoke Admin",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/invoke-admin",
      "remoteRoot": "${workspaceFolder}/invoke-admin",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "Attach to Invoke Execution",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/invoke-execution",
      "remoteRoot": "${workspaceFolder}/invoke-execution",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "Debug Invoke Gateway Service",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/invoke-gateway/server.js",
      "cwd": "${workspaceFolder}/invoke-gateway",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3002"
      },
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "restart": true
    },
    {
      "name": "Attach to Invoke Gateway",
      "type": "node",
      "request": "attach",
      "port": 9231,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/invoke-gateway",
      "remoteRoot": "${workspaceFolder}/invoke-gateway",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "Debug Both Services",
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/scripts/debug-all.js"
    }
  ],
  "compounds": [
    {
      "name": "Debug All Services",
      "configurations": [
        "Debug Invoke Admin (Next.js)",
        "Debug Invoke Execution Service",
        "Debug Invoke Gateway Service"
      ]
    }
  ]
}