# Invoke API Gateway Service Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoke_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Service Configuration
PORT=3002
TRUST_PROXY=true

# Execution Service
EXECUTION_SERVICE_URL=http://localhost:3001

# Route Cache
# How often (ms) to refresh the route cache from the database
CACHE_REFRESH_INTERVAL=60000

# Internal Gateway Verification
# Shared secret used to sign JWTs injected as x-invoke-data when forwarding
# requests to invoke-execution.  Must match INTERNAL_GATEWAY_SECRET in the
# execution service.
# If unset, x-invoke-data is not sent and execution falls back to req.ip.
INTERNAL_GATEWAY_SECRET=your_internal_gateway_secret_change_in_production
